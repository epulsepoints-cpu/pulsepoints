{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "public": true,
  "functions": {
    "api/**": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/lessons/(.*)",
      "destination": "/api/lessons/[lessonId]"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/lessons-data/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "regions": ["iad1"]
}